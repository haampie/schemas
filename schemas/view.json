{
"$schema":"http://json-schema.org/draft-07/schema#",
"title":"Spack view configuration file schema",
"properties":{
"view":{
"anyOf":[
{
"type":"boolean"
},
{
"type":"string"
},
{
"type":"object",
"patternProperties":{
"\\w+":{
"required":[
"root"
],
"additionalProperties":false,
"properties":{
"root":{
"type":"string"
},
"link":{
"type":"string",
"pattern":"(roots|all|run)"
},
"link_type":{
"type":"string"
},
"select":{
"type":"array",
"items":{
"type":"string"
}
},
"exclude":{
"type":"array",
"items":{
"type":"string"
}
},
"projections":{
"type":"object",
"patternProperties":{
"all|\\w[\\w-]*":{
"type":"string"
}
}
}
}
}
}
}
]
}
}
}