{
"$schema":"http://json-schema.org/draft-07/schema#",
"title":"Spack bootstrap configuration file schema",
"type":"object",
"additionalProperties":false,
"properties":{
"bootstrap":{
"type":"object",
"properties":{
"enable":{
"type":"boolean"
},
"root":{
"type":"string"
},
"sources":{
"type":"array",
"items":{
"type":"object",
"properties":{
"name":{
"type":"string"
},
"metadata":{
"type":"string"
}
},
"additionalProperties":false,
"required":[
"name",
"metadata"
]
}
},
"trusted":{
"type":"object",
"patternProperties":{
"\\w[\\w-]*":{
"type":"boolean"
}
}
}
}
}
}
}